<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Projeto-Final_Pweb"
		transaction-type="RESOURCE_LOCAL">
		<class>sistema.modelos.Cliente</class>
		<class>sistema.modelos.Produto</class>
		<class>sistema.modelos.Vendedor</class>
		<class>sistema.modelos.Pedido</class>
		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:derby://localhost:1527/DB_Felipe_Augusto;create=true" />
			<property name="javax.persistence.jdbc.user" value="user" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver" />
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="javax.persistence.jdbc.password" value="123"/>
			
		</properties>
	</persistence-unit>
</persistence>
